<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="self"
            type="com.mauzerov.travelingsalesguyproblem.fragments.TSPFragment" />
        <variable
            name="sharedVm"
            type="com.mauzerov.travelingsalesguyproblem.MainActivityViewModel" />
    </data>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TSPFragment">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:text="@={self.text}"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:text="dodaj"
            app:onClickListener="@{(v) -> sharedVm.citiesLiveData.add(self.text)}"
            android:layout_height="wrap_content"/>

        <AutoCompleteTextView
            android:id="@+id/autocompleteStartCity"
            android:layout_width="match_parent"
            android:completionThreshold="0"
            android:text=""
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/fragmentTspStartCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="LabelFor" />
    </LinearLayout>

</ScrollView>
</layout>